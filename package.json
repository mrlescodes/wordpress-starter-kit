{
  "private": true,
  "workspaces": [
    "wp-content/themes/wsk-theme",
    "wp-content/plugins/wsk-theme-support"
  ],
  "scripts": {
    "build:dev": "lerna run --parallel build:dev",
    "build:dev:watch": "lerna run --parallel build:dev:watch",
    "build:prod": "lerna run --parallel build:prod",
    "sort": "npx sort-package-json \"package.json\" \"wp-content/themes/wsk-theme/**/package.json\" \"wp-content/plugins/wsk-theme-support/**/package.json\"",
    "test": "yarn test:lint",
    "test:lint": "eslint . --cache --report-unused-disable-directives --format=pretty",
    "lint:php": "lerna run --parallel lint:php",
    "start": "./scripts/bin/index.js start"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@wordpress/babel-preset-default": "^4.19.0",
    "autoprefixer": "^10.1.0",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.13",
    "clean-webpack-plugin": "^3.0.0",
    "colors": "^1.4.0",
    "commander": "^6.2.1",
    "copy-webpack-plugin": "^7.0.0",
    "cosmiconfig": "^7.0.0",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^1.1.5",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^23.0.0",
    "fast-sass-loader": "^1.5.0",
    "husky": "^4.3.6",
    "image-minimizer-webpack-plugin": "^1.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^8.0.0",
    "lerna": "^3.22.1",
    "lint-staged": ">=10",
    "mini-css-extract-plugin": "^1.3.3",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.1",
    "postcss-loader": "^4.1.0",
    "prettier": "^2.2.1",
    "sort-package-json": "^1.48.0",
    "stylelint": "^13.8.0",
    "stylelint-config-wordpress": "^17.0.0",
    "terser-webpack-plugin": "^5.0.3",
    "webpack": "^5.10.3",
    "webpack-merge": "^5.7.2",
    "webpack-remove-empty-scripts": "^0.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.php": "./vendor/bin/phpcs",
    "*.scss": "stylelint --syntax=scss",
    "*.js": [
      "eslint",
      "prettier --write"
    ]
  }
}
